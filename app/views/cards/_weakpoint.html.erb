<!--苦手チェックのアイコン表示部分のテンプレート-->

<% if card.weakness == 0 %>
	<%=link_to "/weakpoint/#{card.id}" do %>
		<%= icon("far", "meh fa-lg",style: "color:rightblue;") %>
	<% end %>
<% else %>
	<%=link_to "/weakpoint/#{card.id}" do %>
		<%= icon("fas", "smile fa-lg", style: "color:orange;") %>
	<% end %>
<% end %>